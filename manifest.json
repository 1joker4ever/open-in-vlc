{
  "name": "Open in VLC media player",
  "description": "Adds a context menu item to send audio/video streams directly to VLC media player",
  "author": "Andy Portmen",
  "version": "0.1.6",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "contextMenus",
    "nativeMessaging",
    "downloads",
    "webRequest",
    "<all_urls>"
  ],
  "optional_permissions": [
    "clipboardWrite"
  ],
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "homepage_url": "http://add0n.com/open-in.html?from=vlc",
  "icons": {
    "16": "data/icons/16.png",
    "19": "data/icons/19.png",
    "32": "data/icons/32.png",
    "38": "data/icons/38.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png",
    "256": "data/icons/256.png",
    "512": "data/icons/512.png"
  },
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "page_action": {
    "default_icon": {
      "16": "data/icons/16.png",
      "19": "data/icons/19.png",
      "32": "data/icons/32.png",
      "38": "data/icons/38.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "web_accessible_resources": [
    "/data/inject/*"
  ],
  "applications": {
    "gecko": {
      "id": "{6b954d17-d17c-4a19-8fe6-ee8052a562d6}"
    }
  }
}
